<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Your Account</h5>
          <p class="card-text"></p>
        </div>
      </div>
      <div class="col-md-8">
        <% if user_signed_in? %>
          <center></center><%= link_to 'New Tweet', new_tweet_path %></center>
        <% end %> <!-- end if signed_in -->
        <ul class="list-group"> 
          <% @tweets.each do |tweet| %>
              <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
                <h5 class="list-group-item-heading"><%= tweet.user.try(:email) %></h5>
                <p class="list-group-item-text"><%= tweet.content %></p>
                <p class="list-group-item-text">
               <% end %>
            </li>
          <% end %> <!-- end tweets loop -->
        </ul>
      </div>
    </div>
  </div> 
</div>