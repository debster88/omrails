<div class="container">
  
  <div class="row">
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title">Your Account</h5>
            <p class="card-text"><% link_to current_user. username %></p>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <% if user_signed_in? %>
          <%= link_to 'New Tweet', new_tweet_path %>
        <% end %> <!-- end if signed_in -->
        <ul class="list-group"> 
          <% @tweets.each do |tweet| %>
            <li class="list-group-item">
              <h5 class="list-group-item-heading"><%= tweet.user.try(:email) %></h5>
              <p class="list-group-item-text"><%= tweet.content %></td>
              <p><%= link_to 'Show', tweet %></p>
              <% if tweet.user == current_user %>  
                  <p><%= link_to 'Edit', edit_tweet_path(tweet) %></p>
                  <p><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              <% end %> <!-- end if tweetuser -->
            </li>
          <% end %> <!-- end tweets loop -->
        </ul>
      </div>
    </div>
  </div> 
</div>